#faça um código que verifique a string recebida

var = input('Digite algo: ')
print(f'O tipo da variável é {type(var)}')
print(f'só tem espaços? {var.isspace()}')
print(f'é alfábetico? {var.isalpha()}')
print(f'é um número? {var.isnumeric()}')
print(f'é alfanumérico? {var.isalnum()}')
print(f'Está em maiusculas? {var.isupper()}')
print(f'está em minusculas? {var.islower()}')
print(f'A forma capitalizada de {var} é {var.capitalize()}')
